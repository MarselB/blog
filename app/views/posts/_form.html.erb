<%= form_for @post, :html => { :multipart => true } do |f| %>
	<% if @post.errors.any? %>
	<div id="errors">
		<h2><%= pluralize(@post.errors.count, "error" )%> prevented this post from saving</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end -%>
		</ul>	
	</div>
	<% end -%>
	<p>
		<br>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
<br>
	<p>
   	 	<%= f.file_field :picture %>
	</p>
<br>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>
<br>
	<p>
		<%= f.submit %>
	</p>

<% end %>