<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http:fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
   		<!-- KLICK NA LOGO REDIreCTA NA ROOTH_PATH-->
	<div id="sidebar">
		<div id="logo"> <!-- LOGO -->
			<%= link_to root_path do %>
				<%= image_tag "logo.svg" %>
			<% end %>
	</div>

		<ul>
			<li class="category">Website</li>
			<li><%= link_to "Blog", root_path %></li>
			
		</ul>

		<ul>
			<li class="category">Social</li>
			<li><a href="https://www.facebook.com/marsel.bogar">Facebook</li>
			<li><a href="https://twitter.com/M4rseel">Twitter</a></li>
			<li><a href="http://www.stumbleupon.com/stumbler/marselbogar/lists">Stumbleupon</a></li>
			<li><a href="https://github.com/MarselB">GitHub</a></li>
			<li><a href="mailto:bogarmarsel@gmail.com">E-mail</a></li>

		</ul>
		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
			<!-- ČE JE TRENUTNA STRAN ROOT_PATH PRIKAŽE VSE Poste-->
			<% if current_page?(root_path) %>
				<p>All Posts</p>
			
				<!-- ČE BI BLO ŠE VEC STRANI BI LAHKA DRUGAM REDIRECTALA-->
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>
			<!-- ČE UPORABNIK NI LOGINAN PRIKAŽE ZA LOGIN PA NEW POST-->
				<% if !user_signed_in? %>
			<button class="button"><%= link_to "Login", new_user_session_path %></p>
				<button class="button"><%= link_to "New Post", new_post_path %></button>
		<% end %>
		<!-- ČE JE UPORABNIK LOGINAN MU PRIKAŽE ZA POST PA ZA LOGOUTAT SE -->
			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
					<button class="button"><%= link_to "Log out", destroy_user_session_path, :method => :delete %></button>
				</div>
			<% end %>
		</div>

		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>